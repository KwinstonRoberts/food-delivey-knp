  <div id='details' class='row'>
    <img src='<%=dish[0].pic%>' class='col-xs-12 col-md-8'>
    <div class='col-xs-12 col-md-4'>
      <h2><%=dish[0].name%></h2>
      <p><%=dish[0].description%></p>
      <div id='cart-btn' class='container row'>
        <button class='btn btn-info col-xs-12 col-sm-5 col-md-6 pull-left'>Add to cart</button>
        <b class='label label-default col-xs-12  col-sm-2 pull-right'><%=dish[0].price%></b>
      </div>
    </div>
  </div>

  <b class='col-xs-12'> ~Additional Options~ </b>
  <div class='container row options'>
    <button class='btn btn-default col-xs-12 col-sm-4'>Onion Rings</button>
    <button class='btn btn-default col-xs-12 col-sm-4'>Fries</button>
    <button class='btn btn-default col-xs-12 col-sm-4'>Coca Cola</button>
  </div>
</div>

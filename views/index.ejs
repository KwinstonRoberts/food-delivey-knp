<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Zuckerburgers</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset='utf-8'>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css" />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/styles/layout.min.css" type="text/css" />
    <link rel="icon" href="./images/ZB.ico" type="image/x-icon"/>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
      <nav class="navBar">

            <a href="#"><i class='burger'><img src="../images/lightLogoTagNoBG.png" class="img-responsive"></i></a>

              <div class="dropdown pull-right">
                <button class="btn btn-default dropdown-toggle" type="button" id="show-cart-button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                  <span class='glyphicon glyphicon-shopping-cart'></span>
                  <span class="caret"></span>
                </button>


                <div id="cart-content" class="dropdown-menu pull-right" aria-labelledby="show-cart-button">

                </div>
              </div>
            </li>
          </ul>
        </div>

      </nav>

      <div class="jumbotron">
        <div class="background">
        <div class='container-fluid cta'>
          <button class='btn' id="viewMenu">View Menu</button>
          </div>

        </div> <!-- end of .background -->

        <div id='menu' class='container'>
          <div class='row'>
            <div class='col-xs-12 col-sm-3'>
              <% include menu.ejs %>
            </div>

            <div class='col-xs-12 col-sm-7'>
              <% include details.ejs %>
            </div>

            <div id='addons' class='col-xs-12 col-sm-2'>
              <% for(x in addons){%>
                <div class="card">
                   <img class="card-img-top img-responsive center-block" src="<%=addons[x].pic%>" >
                   <div class="card-block">
                     <h4 class="card-title"><%=addons[x].name%></h4>
                     <p class="card-text sidePrice"> <%=addons[x].price%> </p>
                     <button class="btn center-block">Add</button>
                  </div>
              </div>
              <%}%>

          </div> <!-- end of addons -->

        </div> <!-- end of row -->
    </div>

      <footer>
        <p class='siteAddress'><%= Math.floor(Math.random()*700)%> Spadina Road - Toronto, ON</p>
        <div class="footerSocial">
         <i class="fa fa-facebook-square fa-3x socialLogo" aria-hidden="true"></i>
          <i class="fa fa-twitter fa-3x sociallogo"></i>
          <i class="fa fa-instagram fa-3x sociallogo"></i>
        </div>
      </footer>


      </div>

    <div id="myModal" class="modal fade" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title text-center">Confirm </h4>
          </div>
          <div id='orderForm' class="modal-body">
              <div class='row'>
                <div class="input-group">
                  <span class="input-group-addon" id="basic-addon1">Name</span>
                  <input type="text" class="form-control" aria-describedby="basic-addon1">
                </div>
                <div class="input-group">
                  <span class="input-group-addon" id="basic-addon2">Phone</span>
                  <input type="phone" class="form-control" aria-describedby="basic-addon2">
                </div>
              </div>


            <p class="orderDetails"><label for="">Order Details</label></p>
            <div id="orderDetails"></div>
            <div id='thanks'>Thanks for your order. You should be receiving a text message shortly with your receipt</div>

          </div>
          <div class="modal-footer">
            <button id='orderButton' type="button" class="btn ckeckout">Place Order</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

   </body>
</html>
